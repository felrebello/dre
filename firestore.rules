rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    match /clinics/{clinicId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    match /financial_reports/{reportId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;

      match /expense_entries/{expenseId} {
        allow read, write: if isAuthenticated() && get(/databases/$(database)/documents/financial_reports/$(reportId)).data.userId == request.auth.uid;
      }

      match /revenue_entries/{revenueId} {
        allow read, write: if isAuthenticated() && get(/databases/$(database)/documents/financial_reports/$(reportId)).data.userId == request.auth.uid;
      }
    }
  }
}
